@page "/editarcontacto/{id}"
@rendermode InteractiveServer 


<h3>Editar Contacto</h3>




<div class="row justify-content-center">
    <FrmContacto Id=@id ModoEdicao="true" OnValidContactSubmit="UpdateContact"/>
</div>


@code {
    [Parameter]
    public string id { get; set; }

    private async Task UpdateContact(Contacto Contact)
    {
        await contactoRepository.UpdateContact (Contact);
        StateHasChanged();
        navigation.NavigateTo("/listarcontactos");
    }


}
